<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="right" >
		<EditText
			android:id="@+id/insertSymbol"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="textCapCharacters"
			android:text="BBNI"
			android:ljayout_alignBaseline="@+id/btnClear"
			android:layout_alignBottom="@+id/btnClear"
			android:layout_centerHorizontal="true" />

		<Button
			android:id="@+id/btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="Check"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true" />
	</RelativeLayout>
	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/hints"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="Display Data"
		/>

		<TextView
			android:id="@+id/displayData"
			android:layout_below="@id/hints"
			android:layout_marginTop="20px"
			android:layout_marginBottom="10px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" Nama: Bank BNI \n Close: xxxx \n Prev: yyyy \n Change: zz%"
		/>

		<TextView
			android:id="@+id/hint"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/displayData"
			android:hint="Recommendation"
		/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20px"
			android:layout_below="@id/hint"
			android:text=" EMA: Buy \n MACD: Buy \n RSI: Buy \n Stochastic Slow: Sell"
			/>
	</RelativeLayout>
</LinearLayout>
